{
    "rewrites": [{
        "source": "/(.*)",
        "destination": "/index.html"
    }],
    "headers": [{
            "source": "/static/(.*)",
            "headers": [{
                "key": "Cache-Control",
                "value": "public, max-age=31536000, immutable"
            }]
        },
        {
            "source": "/(.*).js",
            "headers": [{
                    "key": "Content-Type",
                    "value": "application/javascript"
                },
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*).css",
            "headers": [{
                    "key": "Content-Type",
                    "value": "text/css"
                },
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [{
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}